<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.Pane?>
<VBox alignment="CENTER" spacing="20.0"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.leprpht.clickerapp.controllers.MainController">
    <HBox>
        <!-- controls menu section -->
        <Pane>
            <VBox styleClass="control-menu">
                <Button fx:id="startButton" styleClass="control-menu-button" onAction="#handleStart">
                    <graphic>
                        <ImageView fitHeight="26" fitWidth="26" preserveRatio="true">
                            <Image url="@../icons/play.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="control-menu-button" onAction="#handleUploadFile">
                    <graphic>
                        <ImageView fitHeight="26" fitWidth="26" preserveRatio="true">
                            <Image url="@../icons/file.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="control-menu-button" onAction="#handleReset">
                    <graphic>
                        <ImageView fitHeight="26" fitWidth="26" preserveRatio="true">
                            <Image url="@../icons/backspace.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <VBox styleClass="control-menu-mouse">
                    <HBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <VBox prefWidth="120">
                            <Label text="Mouse X: " fx:id="mouseX"/>
                            <Label text="Mouse Y: " fx:id="mouseY"/>
                        </VBox>
                    </HBox>
                </VBox>
            </VBox>
            <Circle fx:id="statusCircle" radius="5" fill="#D9534F" layoutX="15" layoutY="15"/>
        </Pane>
        <!-- script editor section -->
        <HBox prefWidth="600" alignment="CENTER">
            <VBox alignment="CENTER_LEFT" prefWidth="150" spacing="10">
                <Button text="Ctrl + C" styleClass="script-editor-button" onAction="#handleScriptInsert" userData="CONTROL+C"/>
                <Button text="Ctrl + V" styleClass="script-editor-button" onAction="#handleScriptInsert" userData="CONTROL+V"/>
                <Button text="Ctrl + Z" styleClass="script-editor-button" onAction="#handleScriptInsert" userData="CONTROL+Z"/>
                <Button text="Ctrl + S" styleClass="script-editor-button" onAction="#handleScriptInsert" userData="CONTROL+S"/>
                <Button text="Alt + Tab" styleClass="script-editor-button" onAction="#handleScriptInsert" userData="ALT+TAB"/>
                <Button text="Ctrl + Alt + Del" styleClass="script-editor-button" onAction="#handleScriptInsert" userData="CONTROL+ALT+DELETE"/>
                <Button text="Ctrl + Shift + Esc" styleClass="script-editor-button" onAction="#handleScriptInsert" userData="CONTROL+SHIFT+DELETE"/>
                <Button text="Enter" styleClass="script-editor-button" onAction="#handleScriptInsert" userData="ENTER"/>
                <Button text="Esc" styleClass="script-editor-button" onAction="#handleScriptInsert" userData="ESC"/>
            </VBox>
            <VBox alignment="CENTER">
                <TextArea fx:id="scriptArea" prefHeight="350" prefWidth="400" focusTraversable="false"/>
            </VBox>
        </HBox>
    </HBox>
</VBox>
